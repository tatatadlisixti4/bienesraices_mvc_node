extends ../layout/index 

block contenido
    .py-10 
        h1(class="text-4xl my-10 font-extrabold text-center") Bienes 
            span.font-normal Raíces
        h2(class="text-center text-2xl font-extrabold")=titulo
        
        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg
        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/olvide-password" noValidate)
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="email") Email de Registro
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(
                            placeholder="Tu Email"
                            type="email"
                            name="email")

                    div.flex.items-center.justify-between
                        a.text-gray-500.text-sm(href="/auth/login") ¿Ya tienes cuenta?
                        a.text-gray-500.text-sm(href="/auth/registro") ¿No tienes cuenta?

                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 cursor-pointer py-3 rounded-md text-white uppercase font-bold")(
                        type="submit"
                        value="Enviar Instrucciones")